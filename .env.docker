# Docker environment configuration

# Node environment
NODE_ENV=production

# Ports
PORT=3000
PROXY_PORT=3001

# Qdrant configuration
REACT_APP_QDRANT_URL=http://qdrant:6333
REACT_APP_QDRANT_API_KEY=local_api_key
REACT_APP_QDRANT_COLLECTION=product_inventory

# CORS Proxy configuration
REACT_APP_PROXY_URL=http://cors-proxy:3001

# Qdrant advanced configuration
QDRANT__SERVICE__HOST=0.0.0.0
QDRANT__SERVICE__HTTP_PORT=6333
QDRANT__SERVICE__GRPC_PORT=6334
QDRANT__SERVICE__ENABLE_CORS=true
QDRANT__STORAGE__STORAGE_PATH=/qdrant/storage
QDRANT__STORAGE__SNAPSHOTS_PATH=/qdrant/snapshots
QDRANT__STORAGE__OPTIMIZERS__DEFAULT_SEGMENT_NUMBER=2
QDRANT__STORAGE__OPTIMIZERS__MEMMAP_THRESHOLD_KB=20000
QDRANT__STORAGE__OPTIMIZERS__INDEXING_THRESHOLD_KB=10000
QDRANT__STORAGE__OPTIMIZERS__FLUSH_INTERVAL_SEC=30
QDRANT__STORAGE__OPTIMIZERS__MAX_OPTIMIZATION_THREADS=1
QDRANT__STORAGE__HNSW_INDEX__M=16
QDRANT__STORAGE__HNSW_INDEX__EF_CONSTRUCT=100
QDRANT__STORAGE__HNSW_INDEX__FULL_SCAN_THRESHOLD_KB=10000
QDRANT__STORAGE__HNSW_INDEX__MAX_INDEXING_THREADS=0
QDRANT__STORAGE__HNSW_INDEX__ON_DISK=false
QDRANT__STORAGE__PERFORMANCE__MAX_SEARCH_THREADS=0
QDRANT__STORAGE__PERFORMANCE__PARALLEL_SCORING=true

# Other application settings
# Add any other environment variables your application needs 